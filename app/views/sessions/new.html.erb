<div class="container user-log">
  <div class="border-stuff"> 
    <h1>Login!</h1>
    <%= form_tag "/login", method: :post do %>
      <div>
        Email: <input type="email" name="email">
      </div>
      <div>
        Password: <input type="password" name="password">
      </div>
      <input type="submit" name="Log In">
    <% end %>
  </div>
</div>