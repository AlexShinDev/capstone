<div class="container article-outline">   
  <h3><a href="<%= @article.url %>"><%= @article.article_title %></a></h3>
  <div>
    <p><%= @article.content.html_safe %></p>
  </div>


  <%= form_tag '/articles', method: :post do%>
    <%= hidden_field_tag :id, @article.id %>
    <%= hidden_field_tag :article_title, @article.article_title %>
    <%= hidden_field_tag :url, @article.url %>
    <%= hidden_field_tag :content, @article.content %>
    <%= hidden_field_tag :image, @article.image %>
    <%= hidden_field_tag :summary, @article.summary %>
    <%= submit_tag 'Save Article', class: "btn btn-primary"%>
  <% end %>
</div>
