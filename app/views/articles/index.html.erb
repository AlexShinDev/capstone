<div id="fh5co-blog-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title text-center">
          <h2>Our Blog</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <% @articles.each do |article| %>
        <div class="col-md-4">
          <div class="blog-grid" style="background-image: url(images/image-2.jpg);">
            <!--<img src="<%= article.image %>">-->
          </div>
          <div class="desc">
            <h3><a href="/articles/#{article.article_title}"><%= article.article_title %></a></h3>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
