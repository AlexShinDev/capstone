<div id="fh5co-blog-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title text-center">
          <h2>My Articles</h2>
        </div>
      </div>
    </div>
    <%= @articles.each_slice(3) do |article_slice| %>
      <div class="row">
        <% article_slice.each do |article| %>
          <div class="col-md-4">
            <div class="image" style="height: 300px;">
              <% if article.image == "" %>
              <!-- Might change image url to thumbnail later on, create a shadow too? -->
                <img src="http://www.kalahandi.info/wp-content/uploads/2016/05/sorry-image-not-available.png" style="width: 100%; height: 100%;">
              <% else %>
                <img src="<%= article.image %>" style="width: 100%; height: 100%;">
              <% end %>
            </div>
           <!--  <div class="blog-grid" style="background-image: url(images/image-2.jpg);">
              <img src="<%= article.image %>">
            </div> -->
            <div class="desc">
              <h3><a href="/api/v1/articles/user_article/<%= article.id %>"><%= article.article_title %></a></h3>
              <%= link_to "Delete Article", "/api/v1/articles/#{ article.id }", method: :delete, class: "btn btn-danger"%>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
